<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beepscore.android.connectthree.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boardGridLayout"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board">

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton00"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onButtonClick"
            android:src="@drawable/blank" />

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton01"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton02"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton10"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton11"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton12"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton20"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton21"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

        <ImageButton
            android:layout_width="@dimen/board_piece_side"
            android:layout_height="@dimen/board_piece_side"
            android:id="@+id/imageButton22"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onButtonClick"
            android:src="@drawable/blank"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameButton"
        android:onClick="onClickNewGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
